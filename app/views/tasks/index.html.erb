<div class="container jumbotron">

  <h1>Tasks</h1>

  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" <%= task.completed == true ? "checked" : "" %>>
          <label class="form-check-label">
            <%= link_to task.title, task%></a>
          </label>
          <%= link_to raw('<i class="fas fa-trash-alt"></i>'), task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }
          %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= link_to("ajoute une TASK", new_url, class:"btn btn-success btn-lg")%>

</div>
